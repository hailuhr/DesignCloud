<h1><%= @collection.name %></h1>
<% if is_logged_in? && @collection.user_id == current_user.id %>
   <h3>Click on an image to edit the URL or delete it</h3>
<% end %>

<div class="container gallery">
   <div class="row">
      <% @collection.images.each do |image| %>
         <div class="col-md-4 col-sm-6 column">
         <% if is_logged_in? && @collection.user_id == current_user.id %>
               <a href="/collections/image/<%=image.id%>" class="thumbnail"><img src="<%= image.url %>"></a>
         <% else %> 
               <a href="<%= image.url %>" class="thumbnail" target="_blank"><img src="<%= image.url %>"></a>
         <% end %>
         </div>
      <% end %>
   </div>
</div>


<% if is_logged_in? && @collection.user_id == current_user.id %>
   <button onclick="location.href='/collections/<%=@collection.id%>/delete'" class="btn btn-primary">Delete Collection</button>

   <button onclick="location.href='/collections/<%=@collection.id%>/edit'" class="btn btn-primary">Add Images</button>
<%end %>
  

