<p><%= @collection.name %></p>
<br></br>

<% @collection.images.each do |image| %>
   
   <% if is_logged_in? && @collection.user_id == current_user.id %>
         <a href="/collections/image/<%=image.id%>"><img src="<%= image.url %>"></a> <!-- #paige add -->
   <% else %> 
         <a href="<%= image.url %>"><img src="<%= image.url %>"></a> <!-- #paige add -->
   <% end %>
<% end %>


<% if is_logged_in? && @collection.user_id == current_user.id %>
   Click on an image to edit the image.
   <button onclick="location.href='/collections/<%=@collection.id%>/delete'">Delete Collection</button>

   <button onclick="location.href='/collections/<%=@collection.id%>/edit'">Add Images</button>

   <button onclick="location.href='/collections'">My Collections</button>
<% elsif is_logged_in? %>
   <button onclick="location.href='/logout'">Logout</button>
   <button onclick="location.href='/collections'">My Collections</button>
<% else %>
   <button onclick="location.href='/signup'">Sign Up</button>
<% end %>

